<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body class="body-index">
    <%- include('./partials/header') %>

    <section class="container-banner">
        <div class="banner"> </div>
    </section>
    
    <br/>

    <!--MAIN EN EL QUE SE VAN A AGREGAR LOS PRODUCTOS Y EDITAR LOS YA EXISTENTES-->

    <main class="main-upload-products">
    
        <section class="section-formulario-register">
    
            <form action="/editProduct/<%= producto.id %>?_method=PUT" method="POST" class="form-registro" enctype="multipart/form-data">
    
                <p class="iniciar-sesion-tamañano">Editar producto </p>
                <br>
    
                <div class="control-form">
                    <input type="text" name="modelo" placeholder="" class="control" value= "<%= producto.modelo %>" required>
                </div>
    
                <div class="control-form">
                    <input type="text" name="marca" placeholder= "" class="control" value="<%= producto.marca.nombreMarca %>" required>
                </div>

                <div class="control-form">
                    <select name="tipoProducto" >
                        <option value="Almacenamiento">Almacenamiento</option>
                        <option value="Auriculares">Auriculares</option>
                        <option value="Cables">Cables</option>
                        <option value="Coolers">Coolers</option>
                        <option value="Fuentes de poder">Fuentes de poder</option>
                        <option value="Gabinetes">Gabinetes</option>
                        <option value="Memorias ram">Memorias ram</option>
                        <option value="Microfonos">Microfonos</option>
                        <option value="Microprocesadores">Microprocesadores</option>
                        <option value="Monitores y televisores">Monitores y televisores</option>
                        <option value="Motherboards">Motherboards</option>
                        <option value="Mouses">Mouses</option>
                        <option value="Notebooks">Notebooks</option>
                        <option value="Parlantes">Parlantes</option>
                        <option value="Placas de video">Placas de video</option>
                        <option value="Sillas gamer">Sillas gamer</option>
                        <option value="Teclados">Teclados</option>
                        <option value="Webcams">Webcams</option>
                    </select>
                </div>
    
                <div class="control-form">
                    <input type="file" name="avatar" accept=".jpg" placeholder="Imagen del Producto">
                </div>
    
                <div class="control-form">
                    <input type="text" name="precio" class="control" placeholder="Precio Actual: <%= producto.precio %>" >
                </div>
                
                <div class="iniciar-sesion-tamañano"> Stock disponible</div>

                <div class="control-form">
                    <select name="stockBooleano">
                        <option value="Si">Sí</option>
                        <option value="No">No</option>
                    </select>
                </div>

                <div class="control-form">
                    <input type="text" name="stockCant" class="control" placeholder="Stock actual: <%= producto.stockCantidad %>" >
                </div>

                <div class="iniciar-sesion-tamañano"> En Oferta </div>

                <div class="control-form">
                    <select name="ofertaBooleano">
                        <option value="Si">Sí</option>
                        <option value="No">No</option>
                    </select>
                </div>

                <div class="control-form">
                    <input type="text" name="ofertaPorcentaje" class="control" placeholder="Porcentaje de oferta actual: <%= producto.ofertaPorcentaje %>" >
                </div>
    
                <div class="control-form">
                    <input type="text" name="especificaciones" class="control" placeholder="Especificaciones: " value="<%= producto.especificaciones %>">
                </div>
    
                <div class="control-form">
                    <button type="submit" class="botton">Editar Producto</button>
                </div>
            </form>
        </section>
    
    </main>

    <br/>

    <%- include('./partials/footer') %>
    
</body>

</html>