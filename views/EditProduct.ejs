<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body class="body-index">
    <%- include('./partials/header') %>

    <section class="container-banner">
        <div class="banner"> </div>
    </section>
    
    <br/>

    <!--MAIN EN EL QUE SE VAN A AGREGAR LOS PRODUCTOS Y EDITAR LOS YA EXISTENTES-->

    <main class="main-upload-products">
    
        <section class="section-formulario-register">
    
            <form action="/editProduct/<%= producto.id %>?_method=PUT" method="POST" class="form-registro" enctype="multipart/form-data">
    
                <p class="iniciar-sesion-tamañano">Editar producto </p>
                <br>
    
                <div class="control-form">
                    <input type="text" name="producto" placeholder="" class="control" value= "<%= producto.modelo %>" required>
                </div>
    
                <div class="control-form">
                    <input type="text" name="marca" placeholder= "" class="control" value="<%= producto.marca %>" required>
                </div>

                <div class="control-form">
                    <input type="text" name="tipo" placeholder="" class="control" value="<%= producto.tipoProducto %>" required>
                </div>
    
                <div class="control-form">
                    <input type="file" name="avatar" accept=".jpg" placeholder="Imagen del Producto">
                </div>
    
                <div class="control-form">
                    <input type="text" name="precio" class="control" placeholder="Precio Actual: " value="<%= producto.precio %>">
                </div>
                
                <div class="iniciar-sesion-tamañano"> Stock disponible</div>

                <div class="control-form">
                    <select name="stock">
                        <option value="Sí">Sí</option>
                        <option value="No">No</option>
                    </select>
                </div>

                <div class="control-form">
                    <input type="text" name="stock" class="control" placeholder="Stock actual: " value="<%= producto.stockCant %>">
                </div>

                <div class="iniciar-sesion-tamañano"> En Oferta </div>

                <div class="control-form">
                    <select name="stock">
                        <option value="Sí">Sí</option>
                        <option value="No">No</option>
                    </select>
                </div>

                <div class="control-form">
                    <input type="text" name="descuento" class="control" placeholder="Porcentaje de oferta actual: " value="<%= producto.ofertaPorcentaje %>">
                </div>

                <div class="control-form">
                    <input type="text" name="precio" class="control" placeholder="Precio con oferta: " value="<%= producto.precioConOferta %>">
                </div>
    
                <div class="control-form">
                    <input type="text" name="cuotas" class="control" placeholder="Cuotas sin Interés: " value="<%= producto.cuotasSinInteres %>">
                </div>

                <div class="control-form">
                    <input type="text" name="cuotas" class="control" placeholder="Cuotas: " value="<%= producto.cantCuotas %>">
                </div>

                <div class="control-form">
                    <input type="text" name="cuotas" class="control" placeholder="Interés Cuotas: " value="<%= producto.interescuota %>">
                </div>

                <div class="control-form">
                    <input type="text" name="cuotas" class="control" placeholder="Precio en Cuotas: " value="<%= producto.precioEnCuotas %>">
                </div>

                <div class="control-form">
                    <input type="text" name="cuotas" class="control" placeholder="Especificaciones: " value="<%= producto.especificaciones %>">
                </div>
    
                <div class="control-form">
                    <button type="submit" class="botton">Editar Producto</button>
                </div>
            </form>
        </section>
    
    </main>

    <br/>

    <%- include('./partials/footer') %>
    
</body>

</html>